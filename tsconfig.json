{
    "compilerOptions": {
        "outDir": "./dist",
        "module": "commonjs",
        "target": "es6",
        "removeComments": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "sourceMap": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "strict": true,
        "baseUrl": "src",
        "paths": {
            "bot/*": ["bot/*"],
            "config/*": ["config/*"],
            "controllers/*": ["controllers/*"],
            "entities": ["entities/index"],
            "entities/*": ["entities/*"],
            "helpers": ["helpers/index"],
            "helpers/*": ["helpers/*"],
            "services/*": ["services/*"],
            "modules/*": ["modules/*"],
            "types/*": ["types/*"]
        },
        "lib": ["esnext", "dom"],
        "types": ["./src/types/declarations.d.ts"]
    },
    "exclude": ["node_modules"]
}
